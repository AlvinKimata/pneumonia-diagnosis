@model IEnumerable<SingleImageDiagnosis>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Projects List";

 }
@if (Model.Any())
{
    <div class="card deck">
        @foreach (var project in Model)
        {
            var photoPath = "~/images/" + (project.Photos ?? "noimage.jpg");

            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@project.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail"  src="@photoPath" asp-append-version="true"/>

                <div class="card-header">
                    <h3>@project.ImageResult</h3>
                </div>

                <div class="card-footer text-center d-flex">
                    <a asp-controller="Home" class="btn btn-danger m-1" asp-action="delete">Delete</a>
                </div>
            </div>
        }
    </div>
}
else 
{
    <div class="card">
        <div class="card-header">No single image diagnosis project created yet.</div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a project.
            </h5>

            <a class="btn btn-primary" style="width: auto" asp-controller="Home" asp-action="Create">Create</a>
        </div>
    </div>
}

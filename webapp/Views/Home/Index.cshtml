@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Pneumonia diagnosis web-application.</h1>
        <div class="row">
            <div class="col-xl-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-header" id="numberOfProjectsCreated">

                    </div>

                    <div class="card-body">
                        Number of projects created
                    </div>

                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">Number of patients diagnosed</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" href="#">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
{
    <script>
        function getTotalProjectsCreated(){
            $.ajax({
                url: '@Url.Action("NumberOfProjects", "Home")',
                type: 'GET',
                dataType: 'json',
                success: function (data){
                    $('#numberOfProjectsCreated').html(data);
                    console.log(data);
                },
                error: function(){
                    alert('Failed to fetch data');
                }
            });
        }

        //Call the function when the page loads.
        getTotalProjectsCreated();
    </script>
}
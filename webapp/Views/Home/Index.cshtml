@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Pneumonia diagnosis web-application.</h1>
        <div class="row">

            <div class="col-xl-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-header" id="numberOfBatchProjectsCreated">
                    </div>

                    <div class="card-body large text-white stretched-link">
                        Number of batch projects created
                    </div>

                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" asp-action="ListBatch" asp-controller="Diagnosis">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-header" id="numberOfSingleProjectsCreated">
                    </div>

                    <div class="card-body large text-white stretched-link">
                        Number of single image projects created
                    </div>

                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <a class="small text-white stretched-link" asp-action="List" asp-controller="Diagnosis">View Details</a>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</main>

@section Scripts
{
    <script>
        function getTotalBatchProjectsCreated(){
            $.ajax({
                url: '@Url.Action("NumberOfBatchProjects", "Home")',
                type: 'GET',
                dataType: 'json',
                success: function (data){
                    $('#numberOfBatchProjectsCreated').html(data);
                    console.log(data);
                },
                error: function(){
                    alert('Failed to fetch data');
                }
            });
        }

        function getTotalSingleProjectsDiagnosed(){
            $.ajax({
                url: '@Url.Action("NumberOfSingleProjects", "Home")',
                type: 'GET',
                dataType: 'json',
                success: function (data){
                    $('#numberOfSingleProjectsCreated').html(data);
                    console.log(data);
                },
                error: function(){
                    alert('Failed to fetch data');
                }
            })
        }

        //Call the function when the page loads.
        getTotalBatchProjectsCreated();
        getTotalSingleProjectsDiagnosed();
    </script>
}